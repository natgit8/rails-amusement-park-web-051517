<h1>Sign Up!</h1>

<%= form_for(@user) do |f| %>

  <label>Name: </label>
  <%= f.text_field :name %><br><br>

  <label>Happiness (on a scale of 1-10): </label>
  <%= f.number_field :happiness %><br><br>

  <label>Nausea (on a scale of 1-10): </label>
  <%= f.number_field :nausea %><br><br>

  <label>Height (in inches): </label>
  <%= f.number_field :height %><br><br>

  <label>Dollars: </label>
  <%= f.number_field :tickets %><br><br>

  <label>Check if Park Administrator</label>
  <%= f.check_box :admin %><br><br>

  <%= f.submit %>

<% end %>
